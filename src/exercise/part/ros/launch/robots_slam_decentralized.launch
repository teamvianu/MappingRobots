<launch>
  <!-- Arguments -->
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping]"/>
  <arg name="open_rviz" default="true"/>

  <!-- Robot 1 -->
  <group ns="robot1">
    <include file="$(find exercise)/part/ros/launch/one_robot_slam.launch" >
      <arg name="tf_prefix" value="robot1_tf" />
    </include>

    <node name="robot1_map_merger" pkg="exercise" type="map_merge.py" args="/map /robot1/global_map_robot1" respawn="true"/>
  </group>

  <!-- Robot 2 -->
  <group ns="robot2">
    <include file="$(find exercise)/part/ros/launch/one_robot_slam.launch" >
      <arg name="tf_prefix" value="robot2_tf" />
    </include>

    <node name="robot2_map_merger" pkg="exercise" type="map_merge.py" args="/map /robot2/global_map_robot2" respawn="true"/>
  </group>

  <!-- rviz -->
  <group if="$(arg open_rviz)">
    <node pkg="rviz" type="rviz" name="rviz" required="true"
      args="-d $(find turtlebot3_slam)/rviz/multirobot_2robots.rviz"/>
  </group>
</launch>